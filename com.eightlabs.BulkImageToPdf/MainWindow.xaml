<Window x:Class="com.eightlabs.BulkImageToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:com.eightlabs.WPFCommon.Converters;assembly=com.eightlabs.WPFCommon"
        xmlns:local="clr-namespace:com.eightlabs.BulkImageToPdf"
        Title="8labs Bulk Image to PDF Converter" Height="350" Width="525" WindowStyle="ToolWindow">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="inverseBooleanConverter" />
        <converters:BooleanVisibilityConverter x:Key="booleanVisibilityConverter" />

        <BitmapImage x:Key="DragDrop" UriSource="/Media/DragDrop.png" />

    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextAlignment="Center" FontSize="25" Foreground="Gray">Drop image files to convert to PDF</TextBlock>
        <Viewbox Grid.Row="1">
            <StackPanel>
                <Image Source="{StaticResource DragDrop}" Drop="Grid_Drop" AllowDrop="True" Visibility="{Binding FilesListIsEmpty, Converter={StaticResource booleanVisibilityConverter}}" />
            </StackPanel>
        </Viewbox>
    </Grid>

</Window>
