<Window x:Class="com.eightlabs.BulkImageToPdf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:com.eightlabs.WPFCommon.Converters;assembly=com.eightlabs.WPFCommon"
        xmlns:local="clr-namespace:com.eightlabs.BulkImageToPdf"
        xmlns:views="clr-namespace:com.eightlabs.BulkImageToPdf.Views"
        Title="8labs Bulk Image to PDF Converter" Height="350" Width="525" WindowStyle="SingleBorderWindow" SnapsToDevicePixels="True" ResizeMode="CanResizeWithGrip" MinWidth="400" MinHeight="300">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="inverseBooleanConverter" />
        <converters:BooleanVisibilityConverter x:Key="booleanVisibilityConverter" />

        <BitmapImage x:Key="DragDrop" UriSource="/Media/DragDrop.png" />

    </Window.Resources>

    <Grid>
        <views:DropFiles x:Name="dropView" AllowDrop="True" Drop="Grid_Drop" IsVisibleChanged="view_IsVisibleChanged" />
        <views:ConversionOptions x:Name="optionsView"  Visibility="Collapsed" IsVisibleChanged="view_IsVisibleChanged" />
        <views:ProcessingFiles x:Name="processingView"  Visibility="Collapsed" IsVisibleChanged="view_IsVisibleChanged" />

    </Grid>

</Window>
